<h1>This is new Test Page</h1>

<% if @test.errors.any? %>
	<% @test.errors.full_messages.each do |msg| %>
		<li style="color:red">
		<%= msg %> 
		</li>
	<% end %>
<% end %>


<%= form_for @test do |t| %>
	<p>
		<%= t.label :name %> <br>
		<%= t.text_field :name %>
	</p>

	<p>
		<%= t.label :description %> <br>
		<%= t.text_area :description %>
	</p>

	<p>
		<%= t.submit %>
	</p>
<% end %>

<%= link_to "Show all Items", tests_path%>